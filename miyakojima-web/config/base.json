{
  "data_paths": {
    "current_pois": "./data/miyakojima_pois.json",
    "source_database": "./docs/knowledge/miyakojima_database.json",
    "backup_dir": "./backups/pois"
  },
  "expansion_phases": {
    "phase_1": {
      "target": 50,
      "increment": 25,
      "description": "Initial expansion to 50 POIs"
    },
    "phase_2": {
      "target": 100,
      "increment": 50,
      "description": "Medium expansion to 100 POIs"
    },
    "phase_3": {
      "target": 175,
      "increment": 75,
      "description": "Full expansion to 175 POIs"
    }
  },
  "validation": {
    "miyakojima_bounds": {
      "lat_min": 24.6,
      "lat_max": 24.9,
      "lng_min": 125.1,
      "lng_max": 125.5
    },
    "required_fields": [
      "id",
      "name", 
      "nameEn",
      "category",
      "rating",
      "coordinates",
      "description",
      "features",
      "openHours",
      "estimatedTime",
      "cost",
      "accessibility",
      "weather"
    ],
    "rating_range": {
      "min": 1.0,
      "max": 5.0
    },
    "quality_thresholds": {
      "min_description_length": 20,
      "min_features_count": 2,
      "max_features_count": 10,
      "min_tips_length": 15,
      "min_quality_score": 0.7
    }
  },
  "categories": {
    "beaches": "해변",
    "activities": "액티비티",
    "restaurants": "음식점",
    "culture": "문화", 
    "nature": "자연",
    "shopping": "쇼핑"
  },
  "backup": {
    "max_backups": 10,
    "auto_backup": true,
    "compression": true,
    "retention_days": 30
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "./logs/poi_expansion.log",
    "max_size_mb": 10,
    "backup_count": 5
  },
  "performance": {
    "batch_size": 50,
    "memory_limit_mb": 512,
    "timeout_seconds": 300,
    "max_concurrent_validations": 10
  },
  "expansion_strategy": {
    "quality_threshold": 0.7,
    "geographic_diversity_km": 1.0,
    "category_balance_strategy": "proportional",
    "prioritize_underrepresented": true
  }
}